{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@app/providers": [
        "libs/providers/src"
      ],
      "@app/providers/*": [
        "libs/providers/src/*"
      ],
      "@app/persistence": [
        "libs/persistence/src"
      ],
      "@app/persistence/*": [
        "libs/persistence/src/*"
      ],
      "@app/env": [
        "libs/env/src"
      ],
      "@app/env/*": [
        "libs/env/src/*"
      ],
      "@app/event": [
        "libs/event/src"
      ],
      "@app/event/*": [
        "libs/event/src/*"
      ]
    }
  },
  "include": [
    "apps/**/*.ts",
    "libs/**/*.ts",
    ".eslintrc.js"
  ]
}